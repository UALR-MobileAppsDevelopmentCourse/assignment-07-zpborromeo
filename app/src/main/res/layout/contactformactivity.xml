<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/layoutMargin_medium">


        <EditText
            android:id="@+id/firstNameTV"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textView_Size"
            android:layout_margin="@dimen/layoutGap_small"
            android:drawableStart="@drawable/ic_perm_identity_black_24"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/first_name_hint" />

        <EditText
            android:id="@+id/lastNameTV"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textView_Size"
            android:layout_margin="@dimen/layoutGap_small"
            android:drawableStart="@drawable/ic_perm_identity_black_24"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/last_name_hint" />

        <EditText
            android:id="@+id/phoneNumberTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_Size"
            android:layout_margin="@dimen/layoutGap_small"
            android:drawableStart="@drawable/ic_phone_black_24dp"
            android:ems="12"
            android:inputType="phone"
            android:hint="@string/phone_hint" />

        <EditText
            android:id="@+id/emailTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_Size"
            android:layout_margin="@dimen/layoutGap_small"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/email_hint" />

        <EditText
            android:id="@+id/addressTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_Size"
            android:layout_margin="@dimen/layoutGap_small"
            android:drawableStart="@drawable/ic_place_black_24dp"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:hint="@string/address_hint" />

        <EditText
            android:id="@+id/websiteTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textView_Size"
            android:layout_margin="@dimen/layoutGap_small"
            android:drawableStart="@drawable/ic_public_black_24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/website_hint" />

        <Button
            android:id="@+id/saveContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layoutGap_small"
            android:backgroundTint="@color/colorBlue"
            android:onClick="makeContact"
            android:text="@string/save_button_label"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>